<script>
document.addEventListener('DOMContentLoaded', function() {
  // Khởi tạo các biến toàn cục thông qua đối tượng window
  window.maxConfigs = 5;
  window.currentConfig = 1;
  window.configCount = 1;
  
  const modal = document.getElementById('component-modal');
  const modalTitle = document.getElementById('modal-title');
  const componentList = document.getElementById('component-list');
  const searchInput = document.getElementById('search-component');

  // Tab chuyển cấu hình
  document.querySelectorAll('.config-tab').forEach(function(btn) {
    btn.addEventListener('click', function() {
      if (!btn.hasAttribute('data-config')) return;
      var idx = btn.getAttribute('data-config');
      window.currentConfig = idx;
      document.querySelectorAll('.config-tab').forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      for (let i = 1; i <= window.maxConfigs; i++) {
        const panel = document.getElementById('buildpc-config-' + i);
        if (panel) {
          panel.style.display = (i == idx) ? '' : 'none';
        }
      }
    });
  });

  // Làm mới: xác nhận xóa tất cả cấu hình đã tạo (chỉ giữ lại cấu hình 1)
  document.getElementById('refresh-all-btn').addEventListener('click', function() {
    document.getElementById('refresh-confirm-modal').style.display = 'flex';
  });
  document.getElementById('cancel-refresh').addEventListener('click', function() {
    document.getElementById('refresh-confirm-modal').style.display = 'none';
  });
  document.getElementById('confirm-refresh').addEventListener('click', function() {
    // Xóa tất cả cấu hình (chỉ giữ lại cấu hình 1)
    for (let i = 2; i <= window.maxConfigs; i++) {
      const panel = document.getElementById('buildpc-config-' + i);
      if (panel) {
        panel.style.display = 'none';
        // Xóa nội dung đã chọn
        panel.querySelectorAll('.selected-item').forEach(function(span) {
          span.textContent = '';
        });
        panel.querySelectorAll('.js-config-summary').forEach(function(span) {
          span.textContent = '0 đ';
        });
      }
    }
    // Ẩn các tab cấu hình > 1
    document.querySelectorAll('.config-tab').forEach(function(btn) {
      if (btn.getAttribute('data-config') > 1) btn.remove();
    });
    // Reset tab về cấu hình 1
    document.querySelector('.config-tab[data-config="1"]').classList.add('active');
    for (let i = 1; i <= window.maxConfigs; i++) {
      const panel = document.getElementById('buildpc-config-' + i);
      if (panel) {
        panel.style.display = (i == 1) ? '' : 'none';
      }
    }
    window.configCount = 1;
    document.getElementById('refresh-confirm-modal').style.display = 'none';
    // Xóa nội dung đã chọn của cấu hình 1
    document.getElementById('buildpc-config-1').querySelectorAll('.selected-item').forEach(function(span) {
      span.textContent = '';
    });
    document.getElementById('buildpc-config-1').querySelectorAll('.js-config-summary').forEach(function(span) {
      span.textContent = '0 đ';
    });
  });

  // Xử lý nút chọn linh kiện
  document.querySelectorAll('.select-btn').forEach(btn => {
    console.log('Found select button:', btn); // Debug log
    btn.addEventListener('click', function(e) {
      e.preventDefault(); // Ngăn chặn hành vi mặc định
      console.log('Button clicked'); // Debug log
      
      const configId = this.getAttribute('data-config');
      const componentIndex = this.getAttribute('data-index');
      const category = this.textContent.replace('Chọn ', '').trim();
      
      console.log('Opening modal for:', category); // Debug log
      
      // Hiển thị modal
      modal.style.display = 'flex';
      modalTitle.textContent = `Chọn ${category}`;
      
      // Reset search input
      if (searchInput) {
        searchInput.value = '';
      }
      
      // Hiển thị trạng thái không có sản phẩm
      if (componentList) {
        componentList.innerHTML = `
          <div class="empty-state">
            <img src="https://cdn-icons-png.flaticon.com/512/7486/7486744.png" 
                 alt="Empty" 
                 style="width: 100px; height: 100px; opacity: 0.5; margin-bottom: 16px;">
            <p style="color: #666; font-size: 16px; text-align: center;">
              Không có sản phẩm nào để hiển thị
            </p>
          </div>
        `;
      }
    });
  });

  // Xử lý đóng modal
  const closeButton = document.querySelector('.close-modal');
  if (closeButton) {
    closeButton.addEventListener('click', () => {
      modal.style.display = 'none';
    });
  }

  // Xử lý click bên ngoài modal
  if (modal) {
    modal.addEventListener('click', (e) => {
      if (e.target === modal) {
        modal.style.display = 'none';
      }
    });
  }

  // Xử lý chuyển đổi chế độ xem (grid/list)
  const viewToggleBtns = document.querySelectorAll('.view-toggle-btn');
  
  viewToggleBtns.forEach(btn => {
    btn.addEventListener('click', function() {
      viewToggleBtns.forEach(b => b.classList.remove('active'));
      this.classList.add('active');
      
      componentList.classList.toggle('list-view', this.getAttribute('data-view') === 'list');
    });
  });
  
  // Xử lý chức năng so sánh sản phẩm
  let selectedCompareItems = [];
  const compareItems = document.querySelectorAll('.compare-item');
  const compareBtn = document.querySelector('.compare-btn');
  
  // Mô phỏng thêm sản phẩm vào so sánh từ danh sách
  document.addEventListener('click', function(e) {
    // Xử lý nút so sánh trong item
    if (e.target.closest('.component-item .compare-btn')) {
      e.stopPropagation();
      const btn = e.target.closest('.component-item .compare-btn');
      const item = btn.closest('.component-item');
      
      if (selectedCompareItems.length >= 3) {
        showNotification('Chỉ có thể so sánh tối đa 3 sản phẩm!', 'warning');
        return;
      }
      
      // Thông tin sản phẩm
      const productInfo = {
        id: Date.now(), // Tạm dùng timestamp làm id
        img: item.querySelector('img').src,
        name: item.querySelector('.component-name').textContent,
        price: item.querySelector('.price-current').textContent
      };
      
      addToCompare(productInfo);
    }
    
    // Xử lý nút xóa trong so sánh
    if (e.target.closest('.compare-remove')) {
      e.stopPropagation();
      const removeBtn = e.target.closest('.compare-remove');
      const compareItem = removeBtn.closest('.compare-item');
      const itemId = compareItem.dataset.id;
      
      removeFromCompare(itemId);
    }
    
    // Xử lý nút "Chọn" trong item
    if (e.target.closest('.btn-select')) {
      e.stopPropagation();
      const item = e.target.closest('.component-item');
      const itemName = item.querySelector('.component-name').textContent;
      const itemPrice = item.querySelector('.price-current').textContent;
      
      // Lấy thông tin từ modal
      const modalTitle = document.getElementById('modal-title').textContent;
      const configId = document.querySelector('.config-tab.active').getAttribute('data-config');
      const componentIndex = modalTitle.replace('Chọn ', '').trim();
      
      // Tìm và cập nhật item đã chọn
      const selectedItemSpan = document.getElementById(`selected-${configId}-${getComponentIndex(componentIndex)}`);
      if (selectedItemSpan) {
        selectedItemSpan.textContent = `${itemName} - ${itemPrice}`;
        selectedItemSpan.closest('li').classList.add('has-selection');
      }
      
      // Cập nhật tổng giá
      updateTotalPrice(configId);
      
      // Đóng modal
      document.getElementById('component-modal').style.display = 'none';
      
      // Hiển thị thông báo thành công
      showNotification(`Đã chọn ${itemName}`, 'success');
    }
    
    // Xử lý item trong component-list
    if (e.target.closest('.component-item') && !e.target.closest('.btn-select') && !e.target.closest('.compare-btn') && !e.target.closest('.wishlist-btn') && !e.target.closest('.btn-detail')) {
      const item = e.target.closest('.component-item');
      const selectBtn = item.querySelector('.btn-select');
      if (selectBtn) selectBtn.click();
    }
  });
  
  // Xử lý nút so sánh
  compareBtn.addEventListener('click', function() {
    if (selectedCompareItems.length < 2) return;
    
    // Mở modal so sánh (phần này tùy theo triển khai)
    alert('Chức năng so sánh đang được phát triển!');
  });
  
  // Hàm thêm vào so sánh
  function addToCompare(productInfo) {
    selectedCompareItems.push(productInfo);
    updateCompareUI();
    showNotification('Đã thêm sản phẩm vào so sánh', 'success');
  }
  
  // Hàm xóa khỏi so sánh
  function removeFromCompare(itemId) {
    selectedCompareItems = selectedCompareItems.filter(item => item.id != itemId);
    updateCompareUI();
  }
  
  // Cập nhật UI phần so sánh
  function updateCompareUI() {
    // Cập nhật các ô so sánh
    compareItems.forEach((item, index) => {
      if (index < selectedCompareItems.length) {
        const product = selectedCompareItems[index];
        item.innerHTML = `
          <img src="${product.img}" alt="${product.name}" title="${product.name}">
          <div class="compare-remove"><i class="fa fa-times"></i></div>
        `;
        item.classList.remove('empty');
        item.dataset.id = product.id;
      } else {
        item.innerHTML = `<div class="compare-placeholder">+ Thêm sản phẩm</div>`;
        item.classList.add('empty');
        delete item.dataset.id;
      }
    });
    
    // Cập nhật trạng thái nút so sánh
    compareBtn.disabled = selectedCompareItems.length < 2;
  }
  
  // Hàm lấy index từ tên linh kiện
  function getComponentIndex(componentName) {
    const linh_kien = [
      "BỘ VI XỬ LÝ", "BO MẠCH CHỦ", "RAM", "Ổ CỨNG SSD", "Ổ CỨNG HDD", 
      "VGA", "NGUỒN", "VỎ CASE", "QUẠT TẢN NHIỆT", "TẢN NHIỆT CPU", 
      "TẢN NHIỆT NƯỚC AIO", "MÀN HÌNH", "BÀN PHÍM", "CHUỘT", "TAI NGHE", 
      "BÀN MÁY MÁY TÍNH", "GHẾ GAMING", "THIẾT BỊ MẠNG"
    ];
    
    const index = linh_kien.findIndex(item => 
      item.toLowerCase() === componentName.toLowerCase()
    );
    
    return index !== -1 ? index + 1 : 1;
  }
  
  // Hàm cập nhật tổng giá
  function updateTotalPrice(configId) {
    const configPanel = document.getElementById(`buildpc-config-${configId}`);
    const selectedItems = configPanel.querySelectorAll('.selected-item');
    let totalPrice = 0;
    
    selectedItems.forEach(item => {
      if (item.textContent) {
        const priceText = item.textContent.split('-').pop().trim();
        const price = parseInt(priceText.replace(/\D/g, ''));
        if (!isNaN(price)) totalPrice += price;
      }
    });
    
    const formattedPrice = new Intl.NumberFormat('vi-VN', {
      style: 'currency',
      currency: 'VND'
    }).format(totalPrice).replace('₫', 'đ');
    
    configPanel.querySelectorAll('.js-config-summary').forEach(span => {
      span.textContent = formattedPrice;
    });
  }
  
  // Hàm hiển thị thông báo
  function showNotification(message, type = 'success') {
    const notification = document.createElement('div');
    notification.textContent = message;
    notification.style.position = 'fixed';
    notification.style.bottom = '20px';
    notification.style.right = '20px';
    notification.style.padding = '12px 20px';
    notification.style.borderRadius = '6px';
    notification.style.color = 'white';
    notification.style.fontWeight = '500';
    notification.style.boxShadow = '0 4px 12px rgba(0,0,0,0.15)';
    notification.style.zIndex = '99999';
    notification.style.transition = 'all 0.3s ease';
    notification.style.transform = 'translateY(100px)';
    
    // Màu sắc theo loại thông báo
    if (type === 'success') {
      notification.style.background = '#28a745';
    } else if (type === 'warning') {
      notification.style.background = '#ffc107';
      notification.style.color = '#333';
    } else if (type === 'error') {
      notification.style.background = '#dc3545';
    }
    
    document.body.appendChild(notification);
    setTimeout(() => notification.style.transform = 'translateY(0)', 10);
    
    setTimeout(() => {
      notification.style.transform = 'translateY(100px)';
      setTimeout(() => document.body.removeChild(notification), 300);
    }, 3000);
  }
  
  // Xử lý nút chi tiết
  document.querySelectorAll('.btn-detail').forEach(btn => {
    btn.addEventListener('click', function(e) {
      e.stopPropagation();
      const item = this.closest('.component-item');
      const itemName = item.querySelector('.component-name').textContent;
      alert(`Chi tiết về ${itemName} sẽ hiển thị tại đây.`);
    });
  });
  
  // Xử lý nút yêu thích
  document.querySelectorAll('.wishlist-btn').forEach(btn => {
    btn.addEventListener('click', function(e) {
      e.stopPropagation();
      this.innerHTML = this.innerHTML.includes('far') ? 
        '<i class="fas fa-heart" style="color:#dc3545"></i>' : 
        '<i class="far fa-heart"></i>';
      
      showNotification(
        this.innerHTML.includes('fas') ? 
        'Đã thêm vào danh sách yêu thích' : 
        'Đã xóa khỏi danh sách yêu thích',
        'success'
      );
    });
  });

  // Xử lý nút thêm cấu hình mới
  const addConfigBtn = document.getElementById('add-config-btn');
  const tabConfigsContainer = document.getElementById('tab-configs');
  
  if (addConfigBtn) {
    addConfigBtn.addEventListener('click', function() {
      const configTabs = document.querySelectorAll('.config-tab[data-config]');
      const localConfigCount = configTabs.length;
      
      if (localConfigCount >= window.maxConfigs) {
        showNotification('Số lượng cấu hình đã đạt tối đa!', 'warning');
        return;
      }
      
      // Lấy số ID tiếp theo
      const nextId = localConfigCount + 1;
      
      // Thêm tab mới với hiệu ứng
      const newTab = document.createElement('button');
      newTab.className = 'config-tab';
      newTab.setAttribute('data-config', nextId);
      newTab.innerHTML = `
        <span>Cấu hình ${nextId}</span>
        <i class="fa fa-times remove-config" title="Xóa cấu hình này"></i>
      `;
      newTab.style.position = 'relative';
      newTab.style.overflow = 'hidden';
      newTab.style.transform = 'scale(0.8)';
      newTab.style.opacity = '0';
      
      // Chèn tab mới vào trước nút +
      tabConfigsContainer.insertBefore(newTab, addConfigBtn);
      
      // Thêm hiệu ứng xuất hiện
      setTimeout(() => {
        newTab.style.transition = 'all 0.3s ease';
        newTab.style.transform = 'scale(1)';
        newTab.style.opacity = '1';
      }, 10);
      
      // Sự kiện click chuyển tab
      newTab.addEventListener('click', function(e) {
        // Bỏ qua nếu click vào nút xóa
        if (e.target.closest('.remove-config')) return;
        
        document.querySelectorAll('.config-tab').forEach(tab => tab.classList.remove('active'));
        this.classList.add('active');
        
        // Ẩn tất cả panel và hiện panel tương ứng
        for (let i = 1; i <= window.maxConfigs; i++) {
          const panel = document.getElementById(`buildpc-config-${i}`);
          if (panel) {
            panel.style.display = (i == nextId) ? '' : 'none';
          }
        }
        
        // Cập nhật biến toàn cục thông qua window
        window.currentConfig = parseInt(nextId);
        window.configCount = Math.max(window.configCount, nextId);
      });
      
      // Hiển thị cấu hình mới
      document.getElementById(`buildpc-config-${nextId}`).style.display = '';
      
      // Chuyển đến tab mới
      newTab.click();
      
      // Cập nhật UI của nút thêm
      updateConfigButtonUI();
      
      // Hiển thị thông báo
      showNotification(`Đã tạo cấu hình ${nextId}`, 'success');
    });
  }
  
  // Xử lý sự kiện xóa cấu hình
  document.addEventListener('click', function(e) {
    const removeBtn = e.target.closest('.remove-config');
    if (!removeBtn) return;
    
    e.stopPropagation();
    
    const configTab = removeBtn.closest('.config-tab');
    const configId = configTab.getAttribute('data-config');
    
    // Không cho phép xóa cấu hình đầu tiên
    if (configId === "1") {
      showNotification('Không thể xóa cấu hình đầu tiên', 'warning');
      return;
    }
    
    // Tạo và hiển thị confirm dialog
    const confirmDialog = document.createElement('div');
    confirmDialog.className = 'config-confirm-dialog';
    confirmDialog.innerHTML = `
      <div class="config-confirm-content">
        <h4>Xóa cấu hình</h4>
        <p>Bạn có chắc chắn muốn xóa Cấu hình ${configId}?</p>
        <div class="config-confirm-buttons">
          <button class="btn-cancel">Hủy</button>
          <button class="btn-confirm">Xóa</button>
        </div>
      </div>
    `;
    
    // Style cho dialog
    confirmDialog.style.position = 'fixed';
    confirmDialog.style.top = '0';
    confirmDialog.style.left = '0';
    confirmDialog.style.width = '100%';
    confirmDialog.style.height = '100%';
    confirmDialog.style.backgroundColor = 'rgba(0,0,0,0.5)';
    confirmDialog.style.display = 'flex';
    confirmDialog.style.alignItems = 'center';
    confirmDialog.style.justifyContent = 'center';
    confirmDialog.style.zIndex = '99999';
    
    const dialogContent = confirmDialog.querySelector('.config-confirm-content');
    dialogContent.style.background = 'white';
    dialogContent.style.padding = '24px';
    dialogContent.style.borderRadius = '8px';
    dialogContent.style.maxWidth = '400px';
    dialogContent.style.width = '90%';
    dialogContent.style.boxShadow = '0 5px 20px rgba(0,0,0,0.2)';
    
    const dialogTitle = confirmDialog.querySelector('h4');
    dialogTitle.style.margin = '0 0 16px 0';
    dialogTitle.style.color = '#dc3545';
    dialogTitle.style.fontSize = '20px';
    
    const dialogText = confirmDialog.querySelector('p');
    dialogText.style.margin = '0 0 20px 0';
    dialogText.style.color = '#333';
    
    const buttonContainer = confirmDialog.querySelector('.config-confirm-buttons');
    buttonContainer.style.display = 'flex';
    buttonContainer.style.justifyContent = 'flex-end';
    buttonContainer.style.gap = '10px';
    
    const cancelBtn = confirmDialog.querySelector('.btn-cancel');
    cancelBtn.style.padding = '8px 16px';
    cancelBtn.style.border = '1px solid #dee2e6';
    cancelBtn.style.borderRadius = '4px';
    cancelBtn.style.background = '#f8f9fa';
    cancelBtn.style.color = '#333';
    cancelBtn.style.cursor = 'pointer';
    
    const confirmBtn = confirmDialog.querySelector('.btn-confirm');
    confirmBtn.style.padding = '8px 16px';
    confirmBtn.style.border = 'none';
    confirmBtn.style.borderRadius = '4px';
    confirmBtn.style.background = '#dc3545';
    confirmBtn.style.color = 'white';
    confirmBtn.style.cursor = 'pointer';
    
    document.body.appendChild(confirmDialog);
    
    // Xử lý sự kiện nút hủy
    cancelBtn.addEventListener('click', function() {
      document.body.removeChild(confirmDialog);
    });
    
    // Xử lý sự kiện nút xóa
    confirmBtn.addEventListener('click', function() {
      // Xóa tab cấu hình
      configTab.style.transition = 'all 0.3s ease';
      configTab.style.transform = 'scale(0.8)';
      configTab.style.opacity = '0';
      
      setTimeout(() => {
        configTab.remove();
        
        // Ẩn panel cấu hình
        const configPanel = document.getElementById(`buildpc-config-${configId}`);
        if (configPanel) {
          configPanel.style.display = 'none';
          
          // Reset dữ liệu cấu hình
          configPanel.querySelectorAll('.selected-item').forEach(span => {
            span.textContent = '';
            span.closest('li').classList.remove('has-selection');
          });
          configPanel.querySelectorAll('.js-config-summary').forEach(span => {
            span.textContent = '0 đ';
          });
        }
        
        // Cập nhật lại số thứ tự của các tab
        updateConfigTabNumbers();
        
        // Cập nhật biến toàn cục thông qua window
        const remainingTabs = document.querySelectorAll('.config-tab[data-config]');
        window.configCount = remainingTabs.length;
        
        // Kích hoạt tab đầu tiên nếu còn
        const firstTab = document.querySelector('.config-tab[data-config]');
        if (firstTab) {
          firstTab.click();
        }
        
        // Cập nhật UI của nút thêm
        updateConfigButtonUI();
        
        document.body.removeChild(confirmDialog);
        showNotification(`Đã xóa Cấu hình ${configId}`, 'success');
      }, 300);
    });
  });
  
  // Cập nhật UI của nút thêm cấu hình
  function updateConfigButtonUI() {
    const configTabs = document.querySelectorAll('.config-tab[data-config]');
    const addBtn = document.getElementById('add-config-btn');
    
    if (!addBtn) return;
    
    if (configTabs.length >= window.maxConfigs) {
      addBtn.disabled = true;
      addBtn.style.opacity = '0.5';
      addBtn.style.cursor = 'not-allowed';
    } else {
      addBtn.disabled = false;
      addBtn.style.opacity = '1';
      addBtn.style.cursor = 'pointer';
    }
  }
  
  // Cập nhật lại số thứ tự của các tab
  function updateConfigTabNumbers() {
    const configTabs = document.querySelectorAll('.config-tab[data-config]');
    configTabs.forEach((tab, index) => {
      const newIndex = index + 1;
      tab.setAttribute('data-config', newIndex);
      tab.querySelector('span').textContent = `Cấu hình ${newIndex}`;
    });
  }
});
</script>
