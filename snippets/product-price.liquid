<div class="price-box flex justify-between items-center">
          <div class="flex flex-col gap-1 ">
            {% if contact_item -%}
              <span class="price-contact"> Liên hệ </span>
            {% else -%}
              {% if on_sale -%}
                <span class="price">{{ awe-price | money }}</span>
                {% if awe-compare-price > awe-price -%}
                  <span class="compare-price line-through font-semibold">{{ awe-compare-price | money }}</span>
                {% endif -%}
              {% else -%}
                <span class="price">{{ awe-price | money }}</span>
              {% endif -%}
            {% endif -%}

          </div>
          {% unless contact_item %}
            {% if on_sale -%}
              <div class="badge sale-badge font-semibold text-xs md:text-sm  p-1  md:px-2 md:py-1.5">{{ discount }}</div>
            {% endif -%}
          {% endunless -%}
        </div>