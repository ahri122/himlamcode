{% assign typers = collection.all_types -%}
{% if typers.size > 1 %}
  <aside class="aside-item filter-type md:py-5 py-4 " style="order: {{ settings[filter_order] | default: 0 }}">
    <div class="aside-title">
      <h2 class="title-head margin-top-0 text-base font-semibold mb-3">
        {{ settings[filter_title] }}
      </h2>
    </div>
    <div class="aside-content filter-group">
      <ul class="space-y-3">
        {% for type in typers %}
          {% if type != blank %}
            <li class="filter-item filter-item--check-box {%if forloop.index > 5%} overflow-item {%endif %}">
              <label class="custom-checkbox cursor-pointer flex gap-2 items-center" for="filter-type-{{ type | handleize }}">
                <input
                  type="checkbox"
                  class="form-checkbox"
                  id="filter-type-{{ type | handleize }}"
                  data-group="PRODUCT_TYPE"
                  data-field="type.filter_key"
                  data-value="{{ type | escape }}"
                  value="{{ type  | escape }}"
                  data-operator="OR"
				  name="type"
                >
                {{ type }}
              </label>
            </li>
          {% endif %}
          {% if forloop.last and typers.size > 5 -%}
            <li
              class="filter-item-toggle text-secondary font-semibold cursor-pointer  flex items-center pl-[var(--spacing-6-5)] gap-2   "
            >
              Xem thÃªm <i class="icon icon-carret-down"></i>
            </li>
          {% endif -%}
        {% endfor %}
      </ul>
    </div>
  </aside>
{% endif %}